<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Performer</th>
      <th>Duration</th>
      <th>Quality</th>
      <th>Delivery</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.location_id %></td>
        <td><%= order.performer_id %></td>
        <td><%= order.duration_id %></td>
        <td><%= order.quality_id %></td>
        <td><%= order.delivery_id %></td>
        <td><%= order.category_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

