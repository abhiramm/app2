    <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Section 1</a></li>
    <li><a href="#tab2" data-toggle="tab">Section 2</a></li>
    <li><a href="#tab3" data-toggle="tab">Section 3</a></li>
    <li><a href="#tab4" data-toggle="tab">Section 4</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
    <p>
  <strong>First name:</strong>
  <%= @performer.first_name %>
</p>

<p>
  <strong>White label:</strong>
  <%= @performer.white_label_id %>
</p>

<p>
  <strong>Location:</strong>
  <%= @performer.location.name %>
</p>

<p>
  <strong>Avatar:</strong>
<%= image_tag @performer.avatar_url(:thumb) if @performer.avatar? %>

</p>

<p>
  <!--<strong>Location:</strong>
  <%# @performer.location %>-->
</p>

<p>
  <strong>Photo:</strong>
<%= image_tag @performer.photo_id_url(:thumb) if @performer.photo_id? %></p>

<p>
  <strong>Profile thumb:</strong>
  <%= image_tag @performer.profile_thumb_url(:thumb) if @performer.profile_thumb? %>
</p>

<p>
  <strong>Profile gif:</strong>
  <%= image_tag @performer.profile_gif_url(:thumb) if @performer.profile_gif? %>
</p>

</p>
</div>
<div class="tab-pane" id="tab2">
    <p><% @performer.clip_categories.each do |category| %>
  <div class="clean">
  <%= form_tag "update_amount", :remote => :true do %>
      <%= label_tag "category", category.name, :class => "pull-left" %>
      <%= number_field_tag "amount", @amount, :class => "pull-left" %>
      <%= hidden_field_tag "category", category.id %>
      <%= submit_tag "Update" %>
    <% end %>
  </div>
<% end %></p>
    </div>
    
    
    <div class="tab-pane" id="tab3">
     <%= simple_form_for(@performer,:html => {:multipart => true} ) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
             
              <%= f.label :clip_categories %>
              <div class="controls">
                  <% ClipCategory.all.each do |category| %>
                      <%= check_box_tag "performer[clip_category_ids][]", category.id, @performer.clip_category_ids.include?(category.id) %>
                      <%= category.name %><br />
                  <% end %>
             </div>

             </div>
          
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>

      </div>
    <div class="tab-pane" id="tab4">
      <%= simple_form_for(@performer,:html => {:multipart => true} ) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
             
              <%= f.label :quality %>
              <div class="controls">
                  <% Quality.all.each do |quality| %>
                      <%= check_box_tag "performer[quality_ids][]", quality.id, @performer.quality_ids.include?(quality.id) %>
                      <%= quality.name %><br />
                  <% end %>
             </div>

             </div>
          
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>

    </div>
    </div>
    </div>


